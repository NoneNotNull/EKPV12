<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
	<!-- 表单 Bean -->
	<form-beans>
		<form-bean
			name="sysNewsMainForm"
			type="com.landray.kmss.sys.news.forms.SysNewsMainForm">
		</form-bean>
		<form-bean
			name="sysNewsTemplateForm"
			type="com.landray.kmss.sys.news.forms.SysNewsTemplateForm">
		</form-bean>
		<form-bean
			name="sysNewsPublishMainForm"
			type="com.landray.kmss.sys.news.forms.SysNewsPublishMainForm">
		</form-bean>
		<form-bean
			name="sysNewsPublishCategoryForm"
			type="com.landray.kmss.sys.news.forms.SysNewsPublishCategoryForm">
		</form-bean>
	</form-beans>
	<!-- 操作映射 -->
	<action-mappings>
	   <!-- 新UED新增Action -->
	     <action
			path="/sys/news/sys_news_main/sysNewsMainIndex"
			type="com.landray.kmss.sys.news.actions.SysNewsMainIndexAction"
		    name="sysNewsMainForm"
			parameter="method"
			input="edit">
			<forward
				name="listChildren"
				path="/sys/news/sys_news_ui/sysNewsMain_list.jsp">
			</forward>
			<forward
				name="list"
				path="/sys/news/sys_news_ui/sysNewsMain_list.jsp">
			</forward>
			<forward 
				name="listChildren.4m" 
				path="/sys/news/mobile/list.jsp"></forward>
			<forward 
				name="list.4m" 
				path="/sys/news/mobile/list.jsp"></forward>
		 </action>
		  <action
			path="/sys/news/sys_news_main/sysNewsMainPortlet"
			type="com.landray.kmss.sys.news.actions.SysNewsMainPortletAction"
			parameter="method"
			input="edit">
			<forward
				name="listPortlet"
				path="/sys/news/sys_news_ui/sysNewsMain_listPortlet.jsp">
			</forward>
		 </action> 
		<action
			path="/sys/news/sys_news_main/sysNewsMain"
			type="com.landray.kmss.sys.news.actions.SysNewsMainAction"
			name="sysNewsMainForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/sys/news/sys_news_ui/sysNewsMain_view.jsp">
			</forward>
			<forward
				name="view.4m"
				path="/sys/news/mobile/view.jsp">
			</forward>
			<forward
				name="stylepage.4m"
				path="/sys/news/mobile/view.jsp">
			</forward>
			<forward 
				name="list.4m" 
				path="/sys/news/mobile/list.jsp"></forward>
			<forward 
				name="listChildren.4m" 
				path="/sys/news/mobile/list.jsp"></forward>
			<forward
				name="stylepage"
				path="/sys/news/sys_news_ui/sysNewsMain_view.jsp">
			</forward>
			<forward
				name="stylepage.4pda"
				path="/third/pda/public/module_viewdata.jsp">
			</forward>
			<forward
				name="edit"
				path="/sys/news/sys_news_ui/sysNewsMain_edit.jsp">
			</forward>
			<forward
				name="list"
				path="/sys/news/sys_news_ui/sysNewsMain_list.jsp">
			</forward>
			<forward
				name="list.4pda"
				path="/sys/news/pda/news_listdata.jsp">
			</forward>
			<forward
				name="searchResult"
				path="/sys/news/sys_news_main/sysNewsMain_list.jsp">
			</forward>
			<forward
				name="listChildren"
				path="/sys/news/sys_news_main/sysNewsMain_list.jsp">
			</forward>
			<forward
				name="listChildren.4pda"
				path="/sys/news/pda/news_listdata.jsp">
			</forward>
			<forward
				name="manageList"
				path="/sys/news/sys_news_main/sysNewsMain_list.jsp">
			</forward>
			<forward
				name="editManualPublish"
				path="/sys/news/sys_news_publish_main/sysNewsPublishMain_editManualPublish.jsp">
			</forward>
			<forward
				name="viewAllPublish"
				path="/sys/news/sys_news_publish_main/sysNewsPublishMain_listdata.jsp">
			</forward>
			<forward
				name="browse"
				path="/sys/news/sys_news_main/sysNewsMain_browse.jsp">
			</forward>
			<forward
				name="index"
				path="/sys/news/sys_news_main/sysNewsMain_index.jsp">
			</forward>
		</action>
		<action 
			path="/sys/news/sys_news_main/sysNewsConfig"
			type="com.landray.kmss.sys.news.actions.SysNewsConfigAction"
			parameter="method" 
			name="sysAppConfigForm" 
			scope="request">
		</action>
		<action
			path="/sys/news/sys_news_template/sysNewsTemplate"
			type="com.landray.kmss.sys.news.actions.SysNewsTemplateAction"
			name="sysNewsTemplateForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/sys/news/sys_news_template/sysNewsTemplate_view.jsp">
			</forward>
			<forward
				name="edit"
				path="/sys/news/sys_news_template/sysNewsTemplate_edit.jsp">
			</forward>
			<forward
				name="list"
				path="/sys/news/sys_news_template/sysNewsTemplate_list.jsp">
			</forward>
			<forward
				name="listChildren"
				path="/sys/news/sys_news_template/sysNewsTemplate_list.jsp">
			</forward>
		</action>
		<!-- 发布机制 -->
		<action
			path="/sys/news/sys_news_publish_main/sysNewsPublishMain"
			type="com.landray.kmss.sys.news.actions.SysNewsPublishMainAction"
			name="sysNewsPublishMainForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/sys/news/sys_news_publish_main/sysNewsPublishMain_view.jsp">
			</forward>
			<forward
				name="edit"
				path="/sys/news/sys_news_publish_main/sysNewsPublishMain_edit.jsp">
			</forward>
			<forward
				name="list"
				path="/sys/news/sys_news_publish_main/sysNewsPublishMain_list.jsp">
			</forward>
		</action>
		<action
			path="/sys/news/sys_news_publish_category/sysNewsPublishCategory"
			type="com.landray.kmss.sys.news.actions.SysNewsPublishCategoryAction"
			name="sysNewsPublishCategoryForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/sys/news/sys_news_publish_category/sysNewsPublishCategory_view.jsp">
			</forward>
			<forward
				name="edit"
				path="/sys/news/sys_news_publish_category/sysNewsPublishCategory_edit.jsp">
			</forward>
			<forward
				name="list"
				path="/sys/news/sys_news_publish_category/sysNewsPublishCategory_list.jsp">
			</forward>
		</action>
	</action-mappings>
	<!-- 消息资源 -->
	<message-resources
		parameter="com.landray.kmss.sys.news.ApplicationResources"
		key="sys-news" />
</struts-config>
