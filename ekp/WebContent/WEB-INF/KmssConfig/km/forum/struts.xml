<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
	<!-- 表单 Bean -->
	<form-beans>
		<form-bean
			name="kmForumCategoryForm"
			type="com.landray.kmss.km.forum.forms.KmForumCategoryForm">
		</form-bean>
		<form-bean
			name="kmForumConfigForm"
			type="com.landray.kmss.km.forum.forms.KmForumConfigForm">
		</form-bean>
		<form-bean
			name="kmForumPostForm"
			type="com.landray.kmss.km.forum.forms.KmForumPostForm">
		</form-bean>
		<form-bean
			name="kmForumTopicForm"
			type="com.landray.kmss.km.forum.forms.KmForumTopicForm">
		</form-bean>
		<form-bean
			name="kmForumScoreForm"
			type="com.landray.kmss.km.forum.forms.KmForumScoreForm">
		</form-bean>

	</form-beans>

	<!-- 操作映射 -->
	<action-mappings>
		<action
			path="/km/forum/km_forum_cate/kmForumCategory"
			type="com.landray.kmss.km.forum.actions.KmForumCategoryAction"
			name="kmForumCategoryForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/km/forum/km_forum_cate/kmForumCategory_view.jsp">
			</forward>
			<forward
				name="viewDirectory"
				path="/km/forum/km_forum_cate/kmForumCategory_viewDirectory.jsp">
			</forward>
			<forward
				name="edit"
				path="/km/forum/km_forum_cate/kmForumCategory_edit.jsp">
			</forward>
			<forward
				name="editDirectory"
				path="/km/forum/km_forum_cate/kmForumCategory_editDirectory.jsp">
			</forward>
			<forward
				name="list"
				path="/km/forum/km_forum_cate/kmForumCategory_list.jsp">
			</forward>
			<forward
				name="manage"
				path="/km/forum/km_forum_cate/kmForumCategory_manage.jsp">
			</forward>
			<forward
				name="main"
				path="/km/forum/km_forum_cate/kmForumCategory_main.jsp">
			</forward>
		</action>
		
		<action
			path="/km/forum/criteria/sysSimpleCategoryCriteria"
			type="com.landray.kmss.km.forum.actions.ForumCategoryCriteriaAction"
			parameter="method"
			unknown="false"
			scope="request">
		</action>

		<action
			path="/km/forum/km_forum_config/kmForumConfig"
			type="com.landray.kmss.km.forum.actions.KmForumConfigAction"
			name="kmForumConfigForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="edit"
				path="/km/forum/km_forum_config/kmForumConfig_edit.jsp">
			</forward>
			<forward
				name="viewLevel"
				path="/km/forum/km_forum_config/kmForumUserScore_view.jsp">
			</forward>
		</action>

		<action
			path="/km/forum/km_forum/kmForumPost"
			type="com.landray.kmss.km.forum.actions.KmForumPostAction"
			name="kmForumPostForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/km/forum/km_forum/kmForumPost_view.jsp">
			</forward>
			<forward name="view.4pda" 
				path="/km/forum/km_forum/kmForumPost_view.4pda.jsp">
			</forward>
			<forward
				name="viewDraft"
				path="/km/forum/km_forum_ui/kmForumPost_viewDraft.jsp">
			</forward>
			<forward
				name="edit"
				path="/km/forum/km_forum_ui/kmForumPost_edit.jsp">
		    </forward>
			<forward
				name="quickPostEdit"
				path="/km/forum/km_forum_ui/kmForumPost_editQuick.jsp">
			</forward>
			<forward
				name="reply"
				path="/km/forum/km_forum/kmForumPost_reply_quote_edit.jsp">
			</forward>
			<forward
				name="quote"
				path="/km/forum/km_forum/kmForumPost_reply_quote_edit.jsp">
			</forward>
			<forward
				name="quote.4pda"
				path="/km/forum/km_forum/kmForumPost_reply_quote_edit4pda.jsp">
			</forward>
			<forward
				name="singleView"
				path="/km/forum/km_forum/kmForumPostSingle_view.jsp">
			</forward>
			<forward
				name="quickReply"
				path="/km/forum/km_forum/kmForumPost_quickReply.jsp">
			</forward>
			<forward
				name="updateReply"
				path="/km/forum/km_forum/kmForumPost_quickReply.jsp">
			</forward>
			<forward
				name="quickReply.4pda"
				path="/km/forum/km_forum/kmForumPost_quickReply4pda.jsp">
			</forward>
			<forward
				name="refresh"
				path="/km/forum/km_forum/kmForumPost_refresh.jsp">
			</forward>
			<forward
				name="postSuccess"
				path="/km/forum/post_success.jsp">
			</forward>
		</action>

		<action
			path="/km/forum/km_forum/kmForumTopic"
			type="com.landray.kmss.km.forum.actions.KmForumTopicAction"
			name="kmForumTopicForm"
			parameter="method"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="list"
				path="/km/forum/km_forum/kmForumTopic_list.jsp">
			</forward>
			<forward
				name="list.4pda"
				path="/km/forum/km_forum/kmForumTopic_list4pda.jsp">
			</forward>
			<forward
				name="draftList"
				path="/km/forum/km_forum/kmForumTopic_draft_list.jsp">
			</forward>
			<forward
				name="listOut"
				path="/km/forum/km_forum/kmForumTopic_list_out.jsp">
			</forward>
			<forward
				name="showMove"
				path="/km/forum/km_forum/kmForumTopic_move.jsp">
			</forward>
			<forward
				name="docList"
				path="/km/forum/km_forum/kmForumTopic_detail.jsp">
			</forward>
			<forward
				name="introduce"
				path="/km/forum/km_forum/kmForumTopic_introduce.jsp">
			</forward>
			<forward
				name="listPersonOrZone"
				path="/km/forum/km_forum_ui/kmForumTopic_list.jsp">
			</forward>
		</action>
		
				<action
			path="/km/forum/km_forum/kmForumTopicIndex"
			type="com.landray.kmss.km.forum.actions.KmForumTopicIndexAction"
			name="kmForumTopicForm"
			parameter="method"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="listChildren"
				path="/km/forum/km_forum_ui/kmForumTopic_list.jsp">
			</forward>
			<forward
				name="listChildren.4m"
				path="/km/forum/mobile/list/list.jsp">
			</forward>
		</action>

		<action
			path="/km/forum/km_forum_score/kmForumScore"
			type="com.landray.kmss.km.forum.actions.KmForumScoreAction"
			name="kmForumScoreForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="edit"
				path="/km/forum/km_forum_score/kmForumScore_edit.jsp">
			</forward>
			<forward
				name="editForPerson"
				path="/km/forum/km_forum_score/kmForumScorePerson_edit.jsp">
			</forward>
			<forward
				name="view"
				path="/km/forum/km_forum_score/kmForumScore_view.jsp">
			</forward>
		</action>
		
		<!--门户-->
		<action
			path="/km/forum/km_forum_portlet/kmForumPortlet"
			type="com.landray.kmss.km.forum.actions.KmForumPortletAction"
			parameter="method"
			input="edit">
			<forward
				name="kmForumTopicPortlet"
				path="/km/forum/km_forum_ui/kmForumTopic_portlet.jsp">
			</forward>
			<forward
				name="kmForumRankPortlet"
				path="/km/forum/km_forum_ui/kmForumRank_portlet.jsp">
			</forward>
		</action>

	</action-mappings>

	<message-resources
		parameter="com.landray.kmss.km.forum.ApplicationResources"
		key="km-forum" />
</struts-config>
