<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
	<!-- 表单 Bean -->
	<form-beans>
		<form-bean
			name="kmDocKnowledgeForm"
			type="com.landray.kmss.km.doc.forms.KmDocKnowledgeForm">
		</form-bean>
		<form-bean
			name="kmDocTemplateForm"
			type="com.landray.kmss.km.doc.forms.KmDocTemplateForm">
		</form-bean>
		<form-bean
			name="kmDocKnowledgeConfigForm"
			type="com.landray.kmss.km.doc.forms.KmDocKnowledgeConfigForm">
		</form-bean>
	</form-beans>

	<!-- 操作映射 -->
	<action-mappings>
		<!-- UED专用Action --> 
		<action
			path="/km/doc/km_doc_knowledge/kmDocKnowledgeIndex"
			type="com.landray.kmss.km.doc.actions.KmDocKnowledgeIndexAction"
			name="kmDocKnowledgeForm"
			parameter="method"
			input="edit">
			<forward
				name="listChildren"
				path="/km/doc/km_doc_ui/kmDocKnowledge_list.jsp">
			</forward>
			<forward
				name="listChildren.4m"
				path="/km/doc/mobile/list.jsp">
			</forward>
		</action>
		<action
			path="/km/doc/km_doc_portlet/kmDocTemplatePortlet"
			type="com.landray.kmss.km.doc.actions.KmDocTemplatePortletAction"
			parameter="method"
			unknown="false"
			validate="true"
			scope="request">
		</action>
		<action
			path="/km/doc/km_doc_knowledge/kmDocKnowledgePortlet"
			type="com.landray.kmss.km.doc.actions.KmDocKnowledgePortletAction"
			parameter="method"
			input="edit">
			<forward
				name="listPortlet"
				path="/km/doc/km_doc_ui/kmDocKnowledge_listPortlet.jsp">
			</forward>
		</action>
		<action
			path="/km/doc/km_doc_knowledge/kmDocKnowledge"
			type="com.landray.kmss.km.doc.actions.KmDocKnowledgeAction"
			name="kmDocKnowledgeForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/km/doc/km_doc_ui/kmDocKnowledge_view.jsp">
			</forward>
			<forward 
				name="view.4m"
				path="/km/doc/mobile/view.jsp">
			</forward>
			<forward
				name="edit"
				path="/km/doc/km_doc_ui/kmDocKnowledge_edit.jsp">
			</forward>
			<forward
				name="viewo"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_view.jsp">
			</forward>
			<forward
				name="edito"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_edit.jsp">
			</forward>
			<forward
				name="list"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_list.jsp">
			</forward>
			<forward
				name="listChildren"
				path="/km/doc/km_doc_ui/kmDocKnowledge_list.jsp">
			</forward>
			<forward
				name="searchResult"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_list.jsp">
			</forward>
			<forward
				name="manageList"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_list.jsp">
			</forward>
			<forward
				name="listOut"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_list_out.jsp">
			</forward>
			<forward
				name="stylepageo"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_info_view.jsp">
			</forward>
			<forward
				name="stylepage"
				path="/km/doc/km_doc_ui/kmDocKnowledge_view.jsp">
			</forward>
			<forward
				name="stylepage.4pda"
				path="/third/pda/public/module_viewdata.jsp">
			</forward>
			<forward
				name="stylepage.4m"
				path="/km/doc/mobile/view.jsp">
			</forward>
			<forward
				name="previewDoc"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_preview.jsp">
			</forward>
			<forward
				name="sameCategoryDoc"
				path="/km/doc/km_doc_knowledge/kmDocKnowledge_info_sameCategoryDoc.jsp">
			</forward>
		</action>

		<action
			path="/km/doc/km_doc_template/kmDocTemplate"
			type="com.landray.kmss.km.doc.actions.KmDocTemplateAction"
			name="kmDocTemplateForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="view"
				path="/km/doc/km_doc_template/kmDocTemplate_view.jsp">
			</forward>
			<forward
				name="edit"
				path="/km/doc/km_doc_template/kmDocTemplate_edit.jsp">
			</forward>
			<forward
				name="listChildren"
				path="/km/doc/km_doc_template/kmDocTemplate_list.jsp">
			</forward>
		</action>
		
		<action
			path="/km/doc/km_doc_knowledge_config/kmDocKnowledgeConfig"
			type="com.landray.kmss.km.doc.actions.KmDocKnowledgeConfigAction"
			name="kmDocKnowledgeConfigForm"
			parameter="method"
			input="edit"
			unknown="false"
			validate="true"
			scope="request">
			<forward
				name="edit"
				path="/km/doc/km_doc_knowledge_config/kmDocKnowledgeConfig_edit.jsp">
			</forward>
			<forward
				name="list"
				path="/km/doc/km_doc_knowledge_config/kmDocKnowledgeConfig_list.jsp">
			</forward>
		</action>

	</action-mappings>

	<!-- 消息资源 -->
	<message-resources
		parameter="com.landray.kmss.km.doc.ApplicationResources"
		key="km-doc" />
</struts-config>
