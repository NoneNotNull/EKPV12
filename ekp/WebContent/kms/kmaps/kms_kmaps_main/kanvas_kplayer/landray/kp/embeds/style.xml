<config>

	<!-- 以下是样式库，给样式模板提供共享使用的样式素材 -->

	<template>
		<format id='Text' font='微软雅黑' size='${size}' color='${color}'/>
		<fill id='Simple' color='${color}{adjustColor:1.1},${color}{adjustColor:1}' alpha='0.8,0.8' angle='90' type='radial'/>
		<border id='Simple' color='${color}' alpha='0.8' thickness='${thickness}' caps='round' pixelHinting='true'/>
	</template>
	
	<!-- 一下是全局样式模板, 决定整体风格 , 每种元件还会有自己的自定义样式模板 -->
	<!-- 样式模板决定的是整体风格，快捷工具条进能改变颜色，不能决定风格 -->
	<themes>
		<Simple>
			<shape styleID='Fill'>
				<style fill='Simple'>
				</style>
			</shape>
			<shape styleID='Border' thickness='6'>
				<style border='Simple'>
					<fill alpha='0'/>
				</style>
			</shape>
			
			<text styleID='Title' size='50'>
				<label format='Text' font='黑体'/>
			</text>
			
			<hotspot styleID='Hot' color='#66FFFF' thickness='6'>
				<style border='Simple' fill='Simple'>
					<border color='#666666'/>
				</style>
			</hotspot>
			
			<text styleID='SubTitle' size='40'>
				<label format='Text'>
					<format font='方正楷书'/>
				</label>
			</text>
			
			<text styleID='Body' size='30'>
				<label format='Text'>
					<format font='仿宋'/>
				</label>
			</text>
			
			<line styleID='Border' thickness='6'>
				<style border='Simple'/>
